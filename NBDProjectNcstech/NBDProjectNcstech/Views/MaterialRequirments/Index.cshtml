@model IEnumerable<NBDProjectNcstech.Models.MaterialRequirments>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Quanity)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Unit)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Inventory)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DesignBid)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.SummaryQuantity)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Unit)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Inventory.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DesignBid.ID)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.ID">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
