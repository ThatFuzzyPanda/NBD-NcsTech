                    <div class="card card-primary">
                        <div class="card-header" style="background-color:darkcyan">
                            <div class="row mb-2">
                                <br />
                                <div class="col-md-6 offset-md-3" style="margin-top: 20px;">
                                    <h3 style="color: white;">Edit Material Requirement</h3>

                                </div>
                            </div>
                        </div>
                        <hr style="width: 100%" />
                        <div class="row mb-3">
                            <div class="col-md-6 offset-md-3">
                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="ID" />
                                    <div class="form-group">
                                        <label asp-for="DesignBidID" class="control-label"></label>
                                        <select asp-for="DesignBidID" class="form-control" asp-items="ViewBag.DesignBidID" readonly></select>
                                        <span asp-validation-for="DesignBidID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="InventoryID" class="control-label"></label>
                                        <select asp-for="InventoryID" class="form-control">
                                            <option value="0" disabled selected>Select an Inventory item</option>
                                            <optgroup label="Plants">
                                                @foreach (var item in plantsList)
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            </optgroup>
                                            <optgroup label="Pottery">
                                                @foreach (var item in potteryList)
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            </optgroup>
                                            <optgroup label="Materials">
                                                @foreach (var item in materialsList)
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            </optgroup>
                                        </select>
                                        <span asp-validation-for="InventoryID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Quanity" class="control-label"></label>
                                        <input asp-for="Quanity" class="form-control" />
                                        <span asp-validation-for="Quanity" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="UnitID" class="control-label">Unit of measurement</label>
                                        <select class="form-control" id="UnitID" name="UnitID" asp-items="ViewBag.UnitID" readonly>
                                            <option value="0">Unit</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                        <button type="button" onclick="window.history.back();" class="btn btn-primary">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
