@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/refreshDDL.js"></script>
    <script src="~/js/multiselect.js"></script>
    <script type="text/javascript">
        $('#ProvinceID').change(function () {
            var selectedProvince = $("#ProvinceID").val();
            var URL = "/Clients/GetCities/?ProvinceID=" + selectedProvince;
            refreshDDL('CityID', URL, true, 'Select a Province with Cities first', false, null, true);
        });
    </script>
    <script>
        // Get the LabourID dropdown element
        var labourDropdown = document.getElementById("LabourID");
        // Add change event listener to the dropdown
        labourDropdown.addEventListener("change", function () {
            // Get the selected option value (LabourID)
            var selectedLabourID = this.value;
            // Retrieve the corresponding LabourCost from ViewBag using AJAX or directly from the page (if it's rendered)
            // For demonstration purposes, I'll assume you have LabourCost available in a JavaScript object named labourCosts
            var labourCosts = @Html.Raw(Json.Serialize(ViewBag.LabourCosts));
            // Find the LabourCost based on selectedLabourID
            var selectedLabourCost = labourCosts[selectedLabourID];
            // Set the UnitPrice input field value to the selected LabourCost
            document.getElementById("UnitPrice").value = selectedLabourCost;
        });
    </script>
