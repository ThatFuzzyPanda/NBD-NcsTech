                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.MaterialRequirments.FirstOrDefault().Inventory.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.MaterialRequirments.FirstOrDefault().ExtendedPrice)
