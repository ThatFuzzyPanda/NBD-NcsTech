@model NBDProjectNcstech.Models.DesignBid
<form asp-action="Reject" method="post" id="rejectForm">
	<input type="hidden" name="id" id="hiddenIdFieldForRejection" value="" />
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				<label class="form-check-label" for="ddlRejectBy">
					<strong>Rejecting as:</strong>
				</label>
				<select class="form-control" id="ddlRejectBy" name="ddlRejectBy" required>
					<option value="">Select an option</option>
					<option value="1">Admin</option>
					<option value="2">Client</option>
				</select>
				<label class="form-check-label" for="txtDesc">
					<strong>Description</strong>
				</label>
				<textarea class="form-control" id="txtDesc" name="txtDesc" placeholder="Enter ..."></textarea>
			</div>
			<div class="form-group">
				<input type="submit" id="submitReject" value="Reject" class="btn btn-danger mr-2" />
			</div>
		</div>
	</div>
</form>

