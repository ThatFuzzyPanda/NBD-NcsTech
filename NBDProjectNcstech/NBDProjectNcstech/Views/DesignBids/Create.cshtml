    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/refreshDDL.js"></script>
    <script src="~/js/multiselect.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5qz82FIv5P1e3A6rzqOx18OW1l1z+6b0t4=" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $('#ProvinceID').change(function () {
            var selectedProvince = $("#ProvinceID").val();
            var URL = "/Clients/GetCities/?ProvinceID=" + selectedProvince;
            refreshDDL('CityID', URL, true, 'Select a Province with Cities first', false, null, true);
        });
        $(document).ready(function () {
            $('#ProjectList').select2();
        });
        
            $(document).ready(function () {
                $('#positionFilter').change(function () {
                    var selectedPositions = $(this).val() || [];
                    $('#availOptions option').each(function () {
                        var itemPosition = $(this).val();
                        if (selectedPositions.length === 0 || selectedPositions.includes(itemPosition)) {
                            $(this).show();
                        } else {
                            $(this).hide();
                        }
                    });
                });
            });
    </script>
    
