                                            </div>
                                            <div class="col-auto">
                                                <a asp-controller="Projects" asp-action="Create" class="btn btn-primary btn-sm rounded-circle">
                                                    <i class="fas fa-plus"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body table-responsive p-0">
