                                                    <th style="width: 35%;">Project Site</th>
                                                    <th style="width: 15%;">Bid Amount</th>
                                                    <th style="width: 25%;">Client</th>
                                                    <th style="width: 10%;">More</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var project in Model.PagedProjects)
